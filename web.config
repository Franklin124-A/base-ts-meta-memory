<configuration>
  <system.webServer>
    <handlers>
      <!-- EnvÃ­a todas las solicitudes a tu app Node.js -->
      <add name="iisnode" path="dist/app.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="all">
          <match url=".*" />
          <action type="Rewrite" url="dist/app.js" />
        </rule>
      </rules>
    </rewrite>

    <httpErrors errorMode="Detailed" />
    <asp scriptErrorSentToBrowser="true"/>
  </system.webServer>
</configuration>
