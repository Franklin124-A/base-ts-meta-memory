<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="dist/app.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="all" patternSyntax="ECMAScript" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="dist/app.js" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <requestFiltering allowDoubleEscaping="true" />
    </security>

    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>
